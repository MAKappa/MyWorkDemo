@model MyWorkDemo.Models.ViewModels.RegisterViewModel

<h1>Register</h1>
<form asp-controller="Account" asp-action="Register"
      method="post">
    <table>
        <tr>
            <td><label asp-for="Username"></label></td>
            <td><input asp-for="Username" /></td>
        </tr>
        <tr>
            <td><label asp-for="Password"></label></td>
            <td>
                <input asp-for="Password"
                       type="password" />
            </td>
        </tr>
        <tr>
            <td><label asp-for="ConfirmPassword"></label></td>
            <td>
                <input asp-for="ConfirmPassword"
                       type="password" />
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit"
                       value="Register" />
            </td>
        </tr>
    </table>
    <div asp-validation-summary="All"></div>
    <br />
    <div>@ViewData["message"]</div>
    <h4>
        <a asp-controller="Account" asp-action="Login">
            Login
        </a>
    </h4>
</form>